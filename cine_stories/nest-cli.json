{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": ["**/*.hbs"],
    "watchAssets": false,
    "watchOptions": {
      "usePolling": true,
      "interval": 500,
      "binaryInterval": 1000,
      "ignored": [
        "**/node_modules/**",
        "**/dist/**",
        "**/.git/**",
        "**/coverage/**",
        "**/test/**",
        "**/migrations/**",
        "**/*.spec.ts",
        "**/node_modules",
        "**/dist",
        "**/.git"
      ]
    }
  }
}

