# Development Environment Variables
# Copy this file to .env.development and update with your values

# Node.js Environment
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=2048

# Database Configuration
DATABASE_URL=postgres://cine_stories:cine_stories@db:5432/cine_stories
POSTGRES_USER=cine_stories
POSTGRES_PASSWORD=cine_stories
POSTGRES_DB=cine_stories

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# S3/MinIO Configuration (Development)
S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minio
S3_SECRET_KEY=miniosecret
S3_BUCKET=photo-bucket
S3_PUBLIC_URL=http://localhost:9000

# JWT Secrets (Development - CHANGE IN PRODUCTION!)
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=dev-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=15d
SESSION_SECRET=dev-session-secret-key-change-in-production

# Razorpay Configuration (Test keys)
RAZORPAY_KEY_ID=rzp_test_RsdUUzzuMRnrmK
RAZORPAY_KEY_SECRET=VvwcytJsdkH1Cz2tDWr19TgH

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Client API URL (for Vite) - includes /api prefix
VITE_API_URL=http://localhost:3000/api

# File Watching (for Docker/Windows)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=500
WATCHPACK_POLLING=true

# MinIO Configuration
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniosecret

# Storage Provider Selection
# Set to 'oracle' to use Oracle Cloud Infrastructure Object Storage
# Set to 's3' to use S3-compatible storage (MinIO in development)
STORAGE_PROVIDER=oracle

# Oracle Cloud Infrastructure (OCI) Configuration
# Required when STORAGE_PROVIDER=oracle
# Get these values from your OCI console:
# 1. Tenancy OCID: Identity > Tenancy Details
# 2. User OCID: Identity > Users > Your User > OCID
# 3. Fingerprint: Identity > Users > Your User > API Keys > Fingerprint
# 4. Private Key: The private key file content (from the API key pair you created)
# 5. Region: e.g., us-ashburn-1, us-phoenix-1, eu-frankfurt-1
# 6. Namespace: Object Storage > Bucket Details > Namespace
# 7. Bucket Name: Your bucket name
OCI_TENANCY_OCID=ocid1.tenancy.oc1..aaaaaaaa...
OCI_USER_OCID=ocid1.user.oc1..aaaaaaaa...
OCI_FINGERPRINT=aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99
OCI_REGION=us-ashburn-1
OCI_NAMESPACE=your-namespace
OCI_BUCKET_NAME=your-bucket-name
# Private key content (the entire key including BEGIN/END lines, use \n for newlines)
# IMPORTANT: The entire value must be on ONE line with \n for newlines, and wrapped in quotes
# Example format:
OCI_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"
# Or without quotes if no special characters at the start (but quotes are safer):
# OCI_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----
# Optional: Passphrase if your private key is encrypted
OCI_PRIVATE_KEY_PASSPHRASE=

