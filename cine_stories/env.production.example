# Production Environment Variables
# Copy this file to .env.production and update with STRONG production values
# NEVER commit .env.production to git!

# Node.js Environment
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=4096

# Database Configuration (Production)
# Use strong passwords and secure connection strings
DATABASE_URL=postgres://username:STRONG_PASSWORD@db:5432/cine_stories
POSTGRES_USER=your_production_db_user
POSTGRES_PASSWORD=CHANGE_TO_STRONG_PASSWORD
POSTGRES_DB=cine_stories

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# S3/MinIO Configuration (Production)
# Use production S3 credentials or MinIO with strong keys
S3_ENDPOINT=https://your-s3-endpoint.com
S3_REGION=us-east-1
S3_ACCESS_KEY=your_production_access_key
S3_SECRET_KEY=your_production_secret_key
S3_BUCKET=photo-bucket-prod
S3_PUBLIC_URL=https://your-cdn-url.com

# JWT Secrets (Production - USE STRONG RANDOM STRINGS!)
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=CHANGE_TO_STRONG_RANDOM_SECRET_32_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_TO_STRONG_RANDOM_REFRESH_SECRET_32_CHARS_MIN
SESSION_SECRET=CHANGE_TO_STRONG_RANDOM_SESSION_SECRET_32_CHARS_MIN

# Razorpay Configuration (Production keys)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# Google OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# Frontend URL (Production)
FRONTEND_URL=https://yourdomain.com

# File Watching (not needed in production)
CHOKIDAR_USEPOLLING=false
CHOKIDAR_INTERVAL=1000
WATCHPACK_POLLING=false

# MinIO Configuration (Production)
MINIO_ACCESS_KEY=your_production_minio_access_key
MINIO_SECRET_KEY=your_production_minio_secret_key

